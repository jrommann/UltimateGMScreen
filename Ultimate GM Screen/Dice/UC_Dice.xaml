             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ultimate_GM_Screen.Dice"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label Content="Expression" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" FontSize="20" Height="35"/>
        <TextBox x:Name="textbox_expression" Text="1d20" Margin="115,10,101,0" VerticalAlignment="Top" Height="35" FontSize="20"/>
        <Button x:Name="btn_roll" Content="ROLL" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" Height="35" Width="86" FontSize="20" FontWeight="Bold"/>
    </Grid>
</UserControl>
