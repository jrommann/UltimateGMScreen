<UserControl x:Class="Ultimate_GM_Screen.Entities.UC_EntityEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ultimate_GM_Screen.Entities"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ToolBarTray x:Name="toolBar" Height="29" VerticalAlignment="Top">
            <ToolBar>
                <Button x:Name="newBtn" Content="New" Click="newBtn_Click"/>
                <Button x:Name="saveBtn" Content="Save" Click="saveBtn_Click" />
            </ToolBar>
        </ToolBarTray>
        <Label Content="Folder" HorizontalAlignment="Left" Margin="9,40,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_path" Height="23" Margin="50,36,95,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <CheckBox x:Name="checkBox_keepPath" Content="Keep Path" HorizontalAlignment="Right" Margin="0,40,10,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="12,66,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_name" Height="23" Margin="50,64,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Tags" HorizontalAlignment="Left" Margin="20,95,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBox_tags" Height="23" Margin="50,92,10,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <avalonEdit:TextEditor xmlns:avalonEdit="http://icsharpcode.net/sharpdevelop/avalonedit" x:Name="textEditor_details" FontSize="12pt" Margin="10,120,10,10" Background="#FF3D3D4C" Foreground="White" BorderBrush="#FF4A4A5E"/>        
    </Grid>
</UserControl>
