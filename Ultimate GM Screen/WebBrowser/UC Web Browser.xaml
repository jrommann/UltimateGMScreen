<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ultimate_GM_Screen.WebBrowser"
             xmlns:Wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf" x:Class="Ultimate_GM_Screen.WebBrowser.UC_Web_Browser"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="addressbox" Text="" Grid.Row="0" Margin="0,0,65,5" KeyDown="addressbox_KeyDown"/>
        <Button x:Name="refreshBtn" Content="Refresh" HorizontalAlignment="Right" Margin="0,0,0,5" Width="60" Click="RefreshBtn_Click"/>



        <Wpf:WebView2 x:Name="browser" Grid.Row="1" Margin="0"/>



    </Grid>
</UserControl>
